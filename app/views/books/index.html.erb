<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name :</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction :</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <p><%= link_to "User info", edit_user_path(@user.id) %></p>
        </div>


      <h2>New Book</h2>
        <%= form_with model: @book do |f| %>
        <h4>タイトル</h4>
          <%= f.text_field :title %>
        <h4>感想</h4>
          <%= f.text_area :body %>
          <%= f.submit'Create Book' %>
        <% end %>
    </div>
  
  
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <div>
        <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
        <p>タイトル:<%= link_to book.title, book_path(book.id) %></p>
        <p>感想：<%= book.body %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>