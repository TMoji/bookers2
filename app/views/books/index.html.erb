<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name :</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction :</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <p><%= link_to "User info", edit_user_path(@user.id) %></p>
        </div>

      <h2>New Book</h2>
        <%= form_with model: @book do |f| %>
        <h4>タイトル</h4>
          <%= f.text_field :title %>
        <h4>感想</h4>
          <%= f.text_area :body %>
          <%= f.submit'Create Book' %>
        <% end %>
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>本のタイトル</th>
            <th>感想</th>
            <th colspam="3"></th>
          </tr>
        </thead>
        <tbody>
      <% @books.each do |book| %>
          <tr>
            <td>
              <p><%= image_tag book.user.get_profile_image(100,100) %></p>
            </td>
            <td>
              <p><%= link_to book.title, book_path(book.id) %></p>
            </td>
            <td>
              <p><%= book.body %></p>
            </td>
          </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>